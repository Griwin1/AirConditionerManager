@model AirConditionerManager.Models.Request

<form method="post" asp-action="DeletePost">
    <input asp-for="RequestId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Request</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="RequestName"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="RequestDescription"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Address"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="DateOfTechVisiting"></label>
                    </div>
                    <div class="col-3 ">
                        <label asp-for="Status"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="RequestName" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="RequestDescription" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Address" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="DateOfTechVisiting" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Status" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


